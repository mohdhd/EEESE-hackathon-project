                    <%}%>

                        <div class="container-fluid text-center bg-1">
                            <div class="animated slideInLeft">
                                <h2>ABC</h2>
                                <p>Welcome back,
                                    <%= name %>
                                </p>

                            </div>


                            <div class="container text-center">

